{
  "name": "context-menus",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "image/cute.png",
    "48": "image/cute.png",
    "128": "image/cute.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "image/cute.png"
    }
  },
  "sandbox": {
    "pages": ["popup/popup.html"]
  },
  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "bookmarks",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "desktopCapture",
    "downloads",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://link.zhihu.com/?target*"],
      "js": ["./content_scripts/openLink/zhihu.js"]
    },
    {
      "matches": ["*://link.juejin.cn/?target*"],
      "js": ["./content_scripts/openLink/juejin.js"]
    },
    {
      "matches": ["*://link.csdn.net/?target=*"],
      "js": ["./content_scripts/openLink/csdn.js"]
    },
    {
      "matches": ["*://www.jianshu.com/go-wild*"],
      "js": ["./content_scripts/openLink/jianshu.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["./js/close-window.js"]
    },
    {
      "matches": ["*://www.baidu.com/*"],
      "css": ["./content_scripts/baidu/baidu.css"]
    },
    {
      "matches": ["*://www.google.com.hk/*"],
      "css": ["./content_scripts/google/google.css"]
    }
  ]
}
